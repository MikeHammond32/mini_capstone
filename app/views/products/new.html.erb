<form action="/recipes" method="post">
  <p>title: <input type="text" name="name"></p>
  <p>ingredients: <input type="text" name="description"></p>
  <p>directions: <input type="text" name="price"></p>
  <p>image_url: <input type="text" name="image_url"></p>
  <p>user: </p>
  <select name="user_id">
    <% @users.each do |user| %>
      <option value="<%= user.id %>"><%= user.name %></option>
    <% end %>
  </select>
  <input type="submit" value="Make a new recipe here">
</form>